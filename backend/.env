# =============================================================================
# MFA ATTENDANCE SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development) - Default
DATABASE_URL=sqlite:///./mfa_attendance.db

# PostgreSQL (Production) - Uncomment and configure
# DATABASE_URL=postgresql://username:password@localhost/mfa_attendance

# =============================================================================
# JWT AUTHENTICATION SETTINGS
# =============================================================================
# IMPORTANT: Change this to a secure random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FACE RECOGNITION SETTINGS
# =============================================================================
FACE_RECOGNITION_TOLERANCE=0.6
FACE_ENCODINGS_PATH=./face_encodings

# =============================================================================
# TOTP (TIME-BASED ONE-TIME PASSWORD) SETTINGS
# =============================================================================
TOTP_ISSUER_NAME=MFA Attendance System

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_MIN_LENGTH=8

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=5242880  # 5MB in bytes
# ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/jpg"]

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
# EMAIL_USE_TLS=true

# =============================================================================
# SMS CONFIGURATION (Optional - Twilio for SMS notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# These are handled by FastAPI CORS middleware in main.py

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FILE=app.log
